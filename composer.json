{
    "name": "simple-bus/doctrine-dbal-bridge",
    "type": "library",
    "description": "Doctrine DBAL bridge for using command and event buses",
    "keywords": ["Doctrine", "DBAL", "event bus", "command bus"],
    "homepage": "http://github.com/SimpleBus/DoctrineDBALBridge",
    "license": "MIT",
    "authors": [
        {
            "name": "Jasper N. Brouwer",
            "email": "jasper@nerdsweide.nl"
        }
    ],

    "require": {
        "php": ">=5.4",
        "simple-bus/message-bus": "~1.0",
        "doctrine/dbal": "~2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.3",
        "squizlabs/php_codesniffer": "~2.0"
    },

    "autoload": {
      "psr-4" : { "SimpleBus\\DoctrineDBALBridge\\" : "src" }
    },
    "autoload-dev": {
        "psr-4" : { "SimpleBus\\DoctrineDBALBridge\\Tests\\" : "tests" }
    }
}
