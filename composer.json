{
    "name": "simple-bus/doctrine-orm-bridge",
    "type": "library",
    "description": "Doctrine ORM bridge for using command and event buses",
    "keywords": ["Doctrine", "event bus", "command bus"],
    "homepage": "http://github.com/SimpleBus/DoctrineORMBridge",
    "license": "MIT",
    "authors": [
        {
            "name": "Matthias Noback",
            "email": "matthiasnoback@gmail.com",
            "homepage": "http://php-and-symfony.matthiasnoback.nl"
        }
    ],
    "require": {
        "php": ">=5.4",
        "beberlei/assert": "~2.0",
        "simple-bus/message-bus": "~1.0@dev",
        "doctrine/orm": "~2.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "suggest": {
        "simple-bus/symfony-bridge": "Bridge for using command buses and event buses with Symfony"
    },
    "autoload": {
        "psr-4" : { "SimpleBus\\DoctrineORMBridge\\" : "src" }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0-dev"
        }
    }
}
